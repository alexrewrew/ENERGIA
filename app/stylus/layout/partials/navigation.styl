@import '../../utilities/vars'
@import '../../utilities/mixins'

/* NAVIGATION */
nav
  background $gray-back
  transitions()
  position fixed
  top 0
  left 0
  right 0
  z-index 200
  padding 27px 0
  +mobile()
    padding 7px 0

nav.scroll
  padding 10px 0 4px
  +mobile()
    padding 7px 0

.logo
  display: block
  +portrait()
    img
      width 100%

.nav-panel
  +mobile()
    background $gray-back
    height 100vh
    display none
    overflow-y scroll
    width: calc(100% - 60px)

.nav-mobile
  display none
  +mobile()
    display block

.menu
  display flex
  justify-content space-between
  flex-direction row
  flex-wrap nowrap
  margin 8px 0
  align-items: center;
  +mobile()
    flex-direction column
    margin 20px 0
  li
    a
      display block
      font-size .875em
      color $gray-text
      padding-bottom: 7px;
      +mobile()
        font-size 1.25em
        margin-bottom 15px
      &:hover
        color $white
      &:focus
        color $white
    .active
      color $white
    .phone
      border-bottom 2px solid $red
      color $white
      letter-spacing: 3.3px;
      font-size 16px
      padding-bottom: 2px;
      +portrait()
        letter-spacing 1px
      +mobile()
        font-size 1.25em
      &:hover
        border-bottom-color $trans
        opacity .8

/* BURGER ICON */

.nav-icon
  width 30px
  height 22px
  position relative
  margin: 7px 0;
  cursor pointer
  transitions()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $white
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    transitions()
    &:nth-child(1)
      top 0px
    &:nth-child(2), &:nth-child(3)
      top 9px
    &:nth-child(4)
      top 18px

.nav-icon.open
  span
    &:nth-child(1)
      top 18px
      width 0%
      left 50%
    &:nth-child(2)
      transform rotate(45deg)
    &:nth-child(3)
      transform rotate(-45deg)
    &:nth-child(4)
      top 18px
      width 0%
      left 50%

