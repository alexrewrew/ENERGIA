.slider
  position relative
  &-arrow
    background $red
    max-width 132px
    width 100%
    text-align center
    padding 16px 0
    position absolute
    bottom 0
    right 0
    transitions()
    cursor pointer
    z-index 200
    &:hover
      background $red2
  .arrow-right
    right -392px
    +tablet()
      right -377px
    +portrait()
      right -292px
  .arrow-left
    right -260px
    +tablet()
      right -245px
    +portrait()
      right -160px

.slide-col
  position relative
  z-index 3
  span
    position absolute
    bottom 0
    left 0
    z-index -1
    display none


.shadow
  position absolute
  left -15px
  right -15px
  z-index -1
  bottom -65px
  width calc(100% + 30px)
  +portrait()
    display none

.slider-counter
  position absolute
  bottom 75px
  font-size 1.375em
  letter-spacing: 1.5px;
  font-weight 700
  color $gray-text5