.slider
  position relative
  +mobile()
    padding-bottom 65px
    margin-bottom 90px
  &-arrow
    background $red
    max-width 132px
    width 100%
    text-align center
    padding 16px 0
    position absolute
    bottom -125px
    right 0
    transitions()
    cursor pointer
    z-index 200
    +mobile()
      max-width 100px
      bottom -25px
    &:hover
      background $red2

  .arrow-right
    right 0
  .arrow-left
    right 132px
    +mobile()
      right 100px

.slide-col
  position relative
  z-index 3
  height 413px
  display flex !important
  justify-content center
  align-items center
  overflow hidden
  img
    width 100%
    display block

.slider-counter
  position absolute
  bottom 39px
  right 54.5%
  font-size 1.625em
  letter-spacing: 1.5px;
  font-weight 400
  font-family $slave-font
  color $gray-text5
  +tablet()
    right 65.5%
    bottom 64px
  +portrait()
    right auto
    left 0
    bottom 105px
  +mobile()
    bottom 80px
    right auto
    left 15px

