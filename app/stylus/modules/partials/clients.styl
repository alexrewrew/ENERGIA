.clients
  background $white
  padding-top 83px
  padding-bottom 68px

.client-logos
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center
  padding 34px 0
  align-content center
  margin-bottom 100px
  li
    flex 1 1 16.66666666%
    max-width 16.6666666%
    text-align center
    margin-bottom 50px
    img
      filter grayscale(100%)
      transitions()
      &:hover
        filter grayscale(0)